<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	
	</ui:style>

	<ui:with type="eu.nomme.resource.SiteResource" field="res"></ui:with>
	<g:HTMLPanel  addStyleNames="{res.lightBox.htmlPanel}" ui:field="htmlPanel">
		<g:FlowPanel addStyleNames="{res.lightBox.imageContainer}"
			ui:field="imageContainer">
			<g:Image ui:field="mainImage" />
			<g:FlowPanel addStyleNames="{res.lightBox.thumnailContainer}"
				ui:field="thumnailContainer" />
		</g:FlowPanel>
		<g:HTML ui:field="textArea" />

	</g:HTMLPanel>
</ui:UiBinder> 